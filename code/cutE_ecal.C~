#include "TFile.h"
#include "TTree.h"
#include "TH1F.h"
#include "TString.h"
#include <iostream>

void cutE_ecal(){
	//file includes
	TFile* files[5];
	files[0] = new TFile("../daten/mc/ee.root");
	files[1] = new TFile("../daten/mc/mm.root");
	files[2] = new TFile("../daten/mc/tt.root");
	files[3] = new TFile("../daten/mc/qq.root");
	files[4] = new TFile("../daten/daten/daten_1.root");


	//introduce the canvas
	TCanvas *E_ecal=new TCanvas("E_ecal","E_ecal",1920,1080);

	//	



	//create data for histo
	files[0]->cd(); //ee ntuple
	//introduce cuts
	TString eecuts="Ncharged<=5 && E_ecal>=75 && -0.9<cos_thet<=0.9";
	TTree *hee = (TTree*)files[0]->Get("h3");
	float nEvents_ee_all = hee->Draw("E_ecal>>heEcal_ee_all(200,0,200)");
	TH1F* heEcal_ee_all =(TH1F*) gDirectory->Get("heEcal_ee_all");
	heEcal_ee_all->SetLineColor(kRed);
	cout << ("n_ee_all=") << nEvents_ee_all << endl;

	files[3]->cd(); //tt ntuple
	//introduce cuts
	TString ttcuts="";
	TTree *htt = (TTree*)files[3]->Get("h3");
	float nEvents_tt_all = htt->Draw("Same","E_ecal>>heEcal_tt_all(200,0,200)");
	TH1F* heEcal_tt_all =(TH1F*) gDirectory->Get("heEcal_tt_all");
	heEcal_tt_all->SetLineColor(kBlue);
	cout << ("n_tt_all=") << nEvents_tt_all << endl;
	
	E_ecal->Update();
}
